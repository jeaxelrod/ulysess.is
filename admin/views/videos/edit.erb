<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:videos, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:videos, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:videos, :edit, :id => @video.id) %></li>
</ul>
<div class="tabs-content">
  <div class="picture">
    <% if @video.picture.path %>
      Current Background pic:
      <%= image_tag @video.picture, class:"img-responsive" %>
    <% end %>
    <%= link_to 'Preview Page', "/#{@video.id}", class:'btn btn-primary', role: 'button' %>
  </div>
  <% form_for :video, url(:videos, :update, :id => @video.id), :method => :put, :class => 'form-horizontal' do |f| %>
    <%= partial 'videos/form', :locals => { :f => f } %>
  <% end %>
</div>
